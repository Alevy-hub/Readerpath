@page
@model LoginModel

@{
    ViewData["Title"] = "Logowanie";
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Readerpath</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Readerpath.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;400;900&display=swap" rel="stylesheet">
</head>

<body style="display: flex; min-height: 100vh; flex-direction: column; justify-content: center; overflow: hidden">
    <div class="d-flex justify-content-center align-items-center">
        <img class="d-md-none" src="~/Images/Logo1000x373.webp" width="70%" />
        <img class="d-none d-md-block" src="~/Images/Logo1000x373.webp" width="20%" />
    </div>
    <h1 class="d-flex justify-content-center align-items-center">@ViewData["Title"]</h1>
    <div class="row d-flex justify-content-center align-items-center mt-2">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="Nazwa użytkownika" />
                        <label asp-for="Input.UserName" class="form-label">Nazwa użytkownika</label>
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Hasło" />
                        <label asp-for="Input.Password" class="form-label">Hasło</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Zaloguj się</button>
                    </div>
                    <div>
    @*                    <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>*@
                        <p>
                            <a class="mt-2 w-100 btn btn-lg btn-primary" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Przejdź do rejestracji</a>
                        </p>
    @*                    <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>*@
                    </div>
                </form>
            </section>
          </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
