@{

}
@model List<SearchModel>

<h1>Wyniki wyszukiwania</h1>



<div class="container">
    <div class="row">
        @foreach (SearchModel book in Model){
            string paperClass = null;
            string audioClass = null;
            string ebookClass = null;
            <div class="col-12 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">@book.Title</h3>
                        <p class="card-text">@book.Author <small class="text-muted d-block">@book.Genre</small></p>
                        <div class="d-flex justify-content-end">
                            @if (!book.Paper)
                            {
                                paperClass = "textMutedSearch";
                            }
                            @if (!book.Audiobook)
                            {
                                audioClass = "textMutedSearch";
                            }
                            @if (!book.Ebook)
                            {
                                ebookClass = "textMutedSearch";
                            }
                            <span class="mr-3 @paperClass">Książka papierowa</span>
                            <span class="mx-3 @ebookClass">Ebook</span>
                            <span class="ml-3 @audioClass">Audiobook</span>
                            <a asp-controller="Authorized" asp-action="BookDetails" asp-route-id="@book.Id" class="stretched-link"></a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


