@{
    int numberOfFields = 25;
    int columns = 3;
    int rows = (int)Math.Ceiling(numberOfFields / (double)columns);
}

<div class="row form-group mb-3 d-flex align-items-center justify-content-center align-content-center text-center flex-column">
    <div class="col-md-8">

        <h3>Utwórz nowe Książkowe Bingo</h3>

        <form class="mt-3" action="/Bingo/AddNewBingo" method="post">
            <div class="form-group mb-3 d-flex align-items-center justify-content-center align-content-center text-center flex-column">
                <label class="control-label control-label-text" for="title"><b>Nazwa Twojego nowego Książkowego Bingo</b></label>
                <input class="form-control form-text-input" type="text" id="title" name="title" />
            </div>

            @for (int row = 0; row < rows; row++)
            {
                <div class="row">
                    @for (int col = 0; col < columns; col++)
                    {
                        int index = row * columns + col;
                        if (index < numberOfFields)
                        {
                            <div class="col-md-4">
                                <div class="form-group mb-3 d-flex align-items-center justify-content-center align-content-center text-center flex-column">
                                    <label class="control-label control-label-text" for="book@(index + 1)"><b>Pole @(index + 1)</b></label>
                                    <input class="form-control form-text-input" type="text" id="book@(index + 1)" name="bingoField[@index]" />
                                </div>
                            </div>
                        }
                    }
                </div>
            }

            <input type="submit" value="Utwórz" class="btn btn-primary" />
            <a asp-controller="Bingo" asp-action="Bingo" class="btn btn-primary">Anuluj</a>
        </form>
    </div>
</div>
