@{
    ViewData["Title"] = "Home Page";
    Layout = null; 
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Readerpath</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Readerpath.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;400;900&display=swap" rel="stylesheet">
</head>

<body style="display: flex; min-height: 100vh; flex-direction: column; justify-content: center; overflow: hidden">
    <div class="d-flex justify-content-center align-items-center">
        <img src="~/Images/Logo1000x373.webp" width="60%"/>
    </div>

     @*Typing effect do zrobienia*@
    <div id="loginPageAnimation">
        <p id="typingEffect" class="d-flex justify-content-center align-items-center">Rozpocznij swoją przygodę!</p>

        <div class="d-flex justify-content-center align-items-center">
            <a class="btn btn-primary btn-lg w-25 py-3" asp-area="Identity" asp-page="/Account/Login">Zaloguj</a>
        </div>
        <div class="d-flex justify-content-center align-items-center">
            <a class="btn btn-primary btn-lg w-25 py-3 mt-2" asp-area="Identity" asp-page="/Account/Register">Zarejestruj</a>
        </div>
    </div>

</body>

